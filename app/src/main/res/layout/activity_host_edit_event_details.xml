<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center">

    <EditText
        android:id="@+id/EditEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="EVENT NAME PLACEHOLDER"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <Button
            android:textSize="18sp"
            android:id="@+id/eventDatePickerButtonEdit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Jan 01 2020"
            style="?spinnerStyle"
            android:layout_marginLeft="25dp"
            android:onClick="openEventDatePicker"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's the event time?"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/timeButtonThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="popTimePickerThree"
        android:text="Select Time"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Modes:"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaccine Card Allowed?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginRight="30dp"/>

        <Switch
            android:id="@+id/EditVaxSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COVID Test Allowed?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginRight="46dp"/>

        <Switch
            android:id="@+id/EditTestSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Location:"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/EditEventLocationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="EVENT LOCATION PLACEHOLDER"
        android:minWidth="200dp"
        android:gravity="center"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Description:"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/EditEventDescriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:scrollbars="vertical"
        android:layout_marginTop="30dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut non dapibus enim, ac condimentum lacus. Suspendisse at dapibus elit. Donec dictum sapien non tortor scelerisque tincidunt. Morbi aliquet et lacus in ornare. Vivamus sollicitudin eget urna eget fringilla. Sed sollicitudin fringilla lobortis. Donec nec nisl vel odio euismod ullamcorper. Etiam ornare purus ac quam auctor, in luctus velit feugiat. In vulputate dolor eget augue convallis consequat. Donec sed arcu neque."/>

    <Button
        android:id="@+id/finalizeEventDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit\nUpdates"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        />
</LinearLayout>
</ScrollView>