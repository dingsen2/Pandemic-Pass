<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Username"
            android:textSize="30sp" />


    </LinearLayout>
    <EditText
        android:id="@+id/editTextTextprofileinfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="profile info here"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Change Member"
        android:textColor="@color/white"
        android:layout_gravity="center" />


    <Button
        android:id="@+id/addGroupMembers"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:text="Add Group Members"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/deleteUploadedImages"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:text="Delete Uploaded Images"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_gravity="center" />



</LinearLayout>